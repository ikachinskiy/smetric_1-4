{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block TopMenu %}
    {{ parent() }}
{% endblock %}

{% block RegMenu %}
    {{ parent() }}
{% endblock %}

{% block Avatar %}
    {{ parent() }}
{% endblock %}

{% block LeftMenu %}
    {{ knp_menu_render('AppBundle:Builder:emplMenu') }}
{% endblock %}

{% block MainContent %}
    <h2><span class="badge badge-secondary">Сотрудник: </span>&nbsp;{{ user.empfamily }}&nbsp;{{ user.empname }}&nbsp;{{ user.empsoname }}</h2>
    <p class="lead">Публикации глав в учебниках, пособиях и монографиях: регистрация новой</p>
    <form method="post" action={{ path('sm_empl_pubs_chapters_new') }}>
        <div class="form-group form-row">
            <label for="chaptersAuthor" class="col-sm-2 col-form-label">Автор(ы):</label>
            <div class="col-sm-10">
                <textarea type="text" name="chaptersAuthor" id="chaptersAuthor"
                          class="form-control form-control-sm" placeholder="Автор(ы) публикации" rows="1"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="chaptersChTitle" class="col-sm-2 col-form-label">Название главы:</label>
            <div class="col-sm-10">
                <textarea name="chaptersChTitle" id="chaptersChTitle" class="form-control form-control-sm text-left" rows="3"
                          placeholder="Полное название главы учебника, пособия или монографии на языке публикации"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="chaptersPubTitle" class="col-sm-2 col-form-label">Название учебника / пособия / монографии:</label>
            <div class="col-sm-10">
                <textarea name="chaptersPubTitle" id="chaptersPubTitle" class="form-control form-control-sm text-left" rows="4"
                placeholder="Полное название учебника, пособия или монографии на языке публикации"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="chaptersEditor" class="col-sm-2 col-form-label">Под редакцией:</label>
            <div class="col-sm-10">
                <textarea name="chaptersEditor" id="chaptersEditor" type="text" class="form-control form-control-sm text-left" placeholder="ФИО научного редактора издания"
                          rows="2"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="chaptersPubPlace" class="col-sm-1 col-form-label">Место:</label>
            <div class="col-sm-3">
                <textarea name="chaptersPubPlace" id="chaptersPubPlace" type="text" class="form-control form-control-sm"
                          placeholder="Место издания" rows="1"></textarea>
            </div>
            <label for="chaptersPub" class="col-sm-2 col-form-label">Издательство:</label>
            <div class="col-sm-6">
                <textarea name="chaptersPub" id="chaptersPub" type="text" class="form-control form-control-sm"
                          placeholder="Название издательства" rows="1"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="chaptersYear" class="col-sm-1 col-form-label">Год:</label>
            <div class="col-sm-2">
                <input name="chaptersYear" id="chaptersYear" type="text" class="form-control form-control-sm" placeholder="всего">
            </div>
            <label for="chaptersPages" class="col-sm-1 col-form-label text-right">Стр:</label>
            <div class="col-sm-2">
                <input name="chaptersPages" id="chaptersPages" type="text" class="form-control form-control-sm" placeholder="всего">
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="SaveNewChapter" class="btn btn-primary btn-sm col-sm-9">Сохранить и вернуться</button>
            </div>
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="DontSaveAndReturn" class="btn btn-primary btn-sm col-sm-9">Вернуться без сохранения</button>
            </div>
        </div>
        <input type="hidden" name="formName" value="EmpNewChapter">
    </form>
{% endblock %}

{% block Footer %}
    {{ parent() }}
{% endblock %}