{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block TopMenu %}
    {{ parent() }}
{% endblock %}

{% block RegMenu %}
    {{ parent() }}
{% endblock %}

{% block Avatar %}
    {{ parent() }}
{% endblock %}

{% block LeftMenu %}
    {{ knp_menu_render('SMetricMenuBundle:Builder:emplMenu') }}
{% endblock %}

{% block MainContent %}
    <h2><span class="badge badge-secondary">Сотрудник: </span>&nbsp;{{ user.empfamily }}&nbsp;{{ user.empname }}&nbsp;{{ user.empsoname }}</h2>
    <p class="lead">Объекты интеллектуальной собственности: регистрация нового</p>
    <form method="post" action={{ path('sm_empl_patents_new') }}>
        <div class="form-group form-row">
            <label for="patAuthors" class="col-sm-2 col-form-label">Автор(ы):</label>
            <div class="col-sm-10">
                <textarea type="text" name="patAuthors" id="patAuthors" class="form-control form-control-sm"
                          rows="1" placeholder="Автор(ы) публикации"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="patAuthorsFRC" class="col-sm-6 col-form-label">Число авторов - сотрудников ФИЦ ИУ РАН:</label>
            <div class="col-sm-6">
                <input type="text" name="patAuthorsFRC" id="patAuthorsFRC" class="form-control form-control-sm" placeholder="в том числе сотрудников ФИЦ ИУ РАН"
                       data-toggle="tooltip" data-placement="top" title="Введите число авторов, являющихся сотрудниками ФИЦ ИУ РАН">
            </div>
        </div>
        <div class="form-group form-row">
            <label for="patTitle" class="col-sm-2 col-form-label">Название:</label>
            <div class="col-sm-10">
                <textarea name="patTitle" id="patTitle" class="form-control form-control-sm text-left"
                          rows="4" placeholder="Полное название объекта интеллектуальной собственности"></textarea>
            </div>
        </div>
        <div class="form-group form-row">
            <label for="patType"class="col-sm-2 col-form-label">Вид ОИС:</label>
            <div class="col-sm-4">
                <select name="patType" id="patType" class="form-control form-control-sm">
                    {% for pt in ptypes%}
                        <option value={{ pt.id }}>{{ pt.description }}</option>
                    {% endfor %}
                </select>
            </div>
            <label for="patNumber" class="col-sm-2 col-form-label text-right">№ рег.:</label>
            <div class="col-sm-4">
                <input name="patNumber" id="patNumber" type="text" class="form-control form-control-sm" placeholder="Номер регистрации">
            </div>
        </div>
        <div class="form-group form-row">
            <label for="patPriorDate" class="col-sm-3 col-form-label text-right">Дата приоритета:</label>
            <div class="col-sm-3">
                <input name="patPriorDate" id="patPriorDate" type="date" class="form-control form-control-sm" placeholder="всего">
            </div>
            <label for="patRegDate" class="col-sm-2 col-form-label text-right">Дата рег.:</label>
            <div class="col-sm-4">
                <input name="patRegDate" id="patRegDate" type="date" class="form-control form-control-sm" placeholder="всего">
            </div>
        </div>
        <div class="form-group form-row">
            <label for="patNumPub" class="col-sm-3 col-form-label text-right">№ бюллетеня</label>
            <div class="col-sm-3">
                <input name="patNumPub" id="patNumPub" type="text" class="form-control form-control-sm" placeholder="Номер бюллетеня">
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="SaveNewPat" class="btn btn-primary btn-sm col-sm-9">Сохранить и вернуться</button>
            </div>
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="DontSaveNewPat" class="btn btn-primary btn-sm col-sm-9">Вернуться без сохранения</button>
            </div>
        </div>
        <input type="hidden" name="formName" value="EmpPatentNew">
    </form>
{% endblock %}

{% block Footer %}
    {{ parent() }}
{% endblock %}