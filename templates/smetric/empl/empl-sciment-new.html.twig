{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block TopMenu %}
    {{ parent() }}
{% endblock %}

{% block RegMenu %}
    {{ parent() }}
{% endblock %}

{% block Avatar %}
    {{ parent() }}
{% endblock %}

{% block LeftMenu %}
    {{ knp_menu_render('SMetricMenuBundle:Builder:emplMenu') }}
{% endblock %}

{% block MainContent %}
    <h2><span class="badge badge-secondary">Сотрудник: </span>&nbsp;{{ user.empfamily }}&nbsp;{{ user.empname }}&nbsp;{{ user.empsoname }}</h2>
    <p class="lead">Подготовка научных кадров: регистрация новой активности</p>
    <form method="post" action={{ path('sm_empl_sciment_new') }}>
        <div class="form-group form-row">
            <div class="col-sm-4 text-left">
                <p class="lead">Вид деятельности:</p>
            </div>
            <div class="col-sm-5 text-right">
                <label class="col-form-label">Дата регистрации:</label>
            </div>
            <div class="col-sm-3">
                <input type="date" name="RegDate" class="form-control">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <div class="col-form-legend col-sm-1"></div>
                <div class="col-sm-11">
                    {% for type in scitypes %}
                        <div class="form-check">
                            <label for="sciType" class="form-check-label">
                                <input name="sciType" class="form-check-input" type="radio" value={{ type.id }}>
                                {{ type.description }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </fieldset>

        <div class="form-group form-row">
            <label for="disFIO" class="col-sm-3 col-form-label">
                Ф.И.О. диссертанта:
            </label>
            <input name="disFIO" id="disFIO" type="text" class="col-sm-4">
            <label for="Status" class="col-sm-2 col-form-label text-right">
                Уч.степень:
            </label>
            <select name="Status" id="Status" class="custom-select col-sm-3">
                {% for st in scistatus %}
                    <option value={{ st.id }}>{{ st.scistatus }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group form-row">
            <label for="disTitle" class="col-sm-3 col-form-label">
                Тема диссертации:
            </label>
            <textarea name="disTitle" id="disTitle" type="text" class="col-sm-9" rows="3"></textarea>
        </div>

        <div class="form-group form-row">
            <label for="disCouncil" class="col-sm-3 col-form-label text-right">
                Дисс. совет:
            </label>
            <select name="disCouncil" id="disCouncil" class="custom-select col-sm-3">
                {% for dc in discouncil %}
                    <option value={{ dc.id }}>{{ dc.number }}</option>
                {% endfor %}
            </select>

            <label for="Speciality" class="col-sm-3 col-form-label text-right">
                Специальность:
            </label>
            <select name="Speciality" id="Speciality" class="custom-select col-sm-3">
                {% for sp in speciality %}
                    <option value={{ sp.id }}>{{ sp.number }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group form-row">
            <label for="disDefDate" class="col-sm-3 col-form-label text-right">
                Дата защиты:
            </label>
            <input name="disDefDate" id="disDefDate" type="date" class="col-sm-3">

            <label for="disVAKDate" class="col-sm-3 col-form-label text-right">
                Регистрация ВАК:
            </label>
            <input name="disVAKDate" id="disVAKDate" type="date" class="col-sm-3">
        </div>

        <div class="form-group form-row">
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="SaveNewSci" class="btn btn-primary col-sm-9">Сохранить и вернуться</button>
            </div>
            <div class="col-sm-6 text-right">
                <button type="submit" name="btnSubmit" value="DontSaveNewSci" class="btn btn-primary col-sm-9">Вернуться без сохранения</button>
            </div>
        </div>
        <input type="hidden" name="formName" value="NewSci">
    </form>
{% endblock %}

{% block Footer %}
    {{ parent() }}
{% endblock %}